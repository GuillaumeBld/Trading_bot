# Trading Bot n8n Integration - Environment Variables
# Copy this file to .env and fill in your actual values

# =============================================================================
# AI PROVIDER SETTINGS
# =============================================================================

# OpenAI Configuration
OPENAI_API_KEY=sk-your-openai-api-key-here

# Anthropic Claude Configuration
ANTHROPIC_API_KEY=sk-ant-your-anthropic-key-here

# Ollama Configuration (for local LLM)
OLLAMA_HOST=http://ollama:11434

# =============================================================================
# TRADING CONFIGURATION
# =============================================================================

# Trading Mode: 'paper' for simulation, 'live' for real trading
TRADING_MODE=paper

# Risk Management Settings
MAX_POSITION_SIZE=0.20          # Maximum 20% of portfolio per position
DEFAULT_STOP_LOSS=0.15          # Default 15% stop loss
MAX_DAILY_TRADES=10             # Maximum trades per day
CASH_RESERVE=0.05               # Keep 5% cash reserve

# Broker API Settings (if using live trading)
ALPACA_API_KEY=your-alpaca-api-key
ALPACA_SECRET_KEY=your-alpaca-secret-key
ALPACA_BASE_URL=https://paper-api.alpaca.markets  # Use paper trading URL

# =============================================================================
# DATABASE CONFIGURATION
# =============================================================================

# PostgreSQL Settings
POSTGRES_DB=trading_bot
POSTGRES_USER=postgres
POSTGRES_PASSWORD=your-secure-db-password-here

# n8n Database (uses same PostgreSQL instance)
N8N_DB=n8n

# Redis Settings
REDIS_PASSWORD=your-secure-redis-password-here

# =============================================================================
# n8n CONFIGURATION
# =============================================================================

# Basic Authentication
N8N_BASIC_AUTH_ACTIVE=true
N8N_BASIC_AUTH_USER=admin
N8N_BASIC_AUTH_PASSWORD=your-secure-n8n-password-here

# Webhook Configuration
N8N_WEBHOOK_URL=http://localhost:5678
N8N_EDITOR_BASE_URL=http://localhost:5678

# Encryption Key (generate a random 32-character string)
N8N_ENCRYPTION_KEY=your-32-character-encryption-key-here

# =============================================================================
# API WRAPPER CONFIGURATION
# =============================================================================

# JWT Settings
JWT_SECRET_KEY=your-super-secret-jwt-key-for-api-auth

# Webhook Security
WEBHOOK_SECRET=your-webhook-secret-for-signature-verification

# API Key for external access
API_KEY=your-api-key-for-external-services

# =============================================================================
# NOTIFICATION SETTINGS
# =============================================================================

# Slack Integration
SLACK_BOT_TOKEN=xoxb-your-slack-bot-token
SLACK_CHANNEL=#trading-alerts

# Discord Integration
DISCORD_WEBHOOK_URL=https://discord.com/api/webhooks/your/webhook/url

# Telegram Integration
TELEGRAM_BOT_TOKEN=your-telegram-bot-token
TELEGRAM_CHAT_ID=your-telegram-chat-id

# Email Settings (SMTP)
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=your-email@gmail.com
SMTP_PASSWORD=your-app-password
EMAIL_FROM=your-email@gmail.com
EMAIL_TO=alerts@yourdomain.com

# =============================================================================
# EXTERNAL API KEYS
# =============================================================================

# News API
NEWS_API_KEY=your-news-api-key

# Alpha Vantage (for additional market data)
ALPHA_VANTAGE_API_KEY=your-alpha-vantage-key

# Twitter API (for sentiment analysis)
TWITTER_BEARER_TOKEN=your-twitter-bearer-token

# =============================================================================
# MONITORING & LOGGING
# =============================================================================

# Log Level: DEBUG, INFO, WARNING, ERROR
LOG_LEVEL=INFO

# Grafana Settings
GRAFANA_PASSWORD=your-grafana-admin-password

# =============================================================================
# SECURITY SETTINGS
# =============================================================================

# SSL Certificate paths (if using HTTPS)
SSL_CERT_PATH=/etc/nginx/ssl/cert.pem
SSL_KEY_PATH=/etc/nginx/ssl/key.pem

# Allowed origins for CORS
ALLOWED_ORIGINS=http://localhost:3000,http://localhost:5678,http://localhost:8501

# =============================================================================
# PERFORMANCE SETTINGS
# =============================================================================

# Worker Configuration
API_WORKERS=4                   # Number of API worker processes
MAX_CONNECTIONS=100             # Maximum concurrent connections
REQUEST_TIMEOUT=30              # Request timeout in seconds

# Cache Settings
CACHE_TTL=300                   # Cache time-to-live in seconds
MAX_CACHE_SIZE=100              # Maximum cache size in MB

# =============================================================================
# DEVELOPMENT SETTINGS
# =============================================================================

# Environment
ENVIRONMENT=production          # development, staging, production

# Debug Settings
DEBUG=false
RELOAD_ON_CHANGE=false

# Timezone
TIMEZONE=UTC

# =============================================================================
# CLOUD DEPLOYMENT SETTINGS
# =============================================================================

# AWS Settings (if deploying to AWS)
AWS_ACCESS_KEY_ID=your-aws-access-key
AWS_SECRET_ACCESS_KEY=your-aws-secret-key
AWS_REGION=us-east-1

# Google Cloud Settings (if deploying to GCP)
GOOGLE_APPLICATION_CREDENTIALS=/path/to/service-account.json
GCP_PROJECT_ID=your-gcp-project-id

# =============================================================================
# BACKUP SETTINGS
# =============================================================================

# Database Backup
BACKUP_SCHEDULE=0 2 * * *       # Daily at 2 AM
BACKUP_RETENTION_DAYS=30        # Keep backups for 30 days
BACKUP_LOCATION=/app/backups

# =============================================================================
# FEATURE FLAGS
# =============================================================================

# Enable/disable features
ENABLE_AI_TRADING=true
ENABLE_REAL_TIME_UPDATES=true
ENABLE_NOTIFICATIONS=true
ENABLE_WEB_INTERFACE=true
ENABLE_API=true
ENABLE_WEBHOOKS=true

# =============================================================================
# RATE LIMITING
# =============================================================================

# API Rate Limits
API_RATE_LIMIT=100              # Requests per minute per IP
WEBHOOK_RATE_LIMIT=50           # Webhook calls per minute

# Trading Rate Limits
TRADES_PER_MINUTE=5             # Maximum trades per minute
ORDERS_PER_HOUR=50              # Maximum orders per hour